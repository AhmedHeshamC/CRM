# Production Environment Configuration
# Following KISS principles - simple and clear

# Django Settings
DEBUG=False
SECRET_KEY=production-secret-key-very-secure
DJANGO_SETTINGS_MODULE=crm.settings_production

# Database Configuration
POSTGRES_NAME=crm_production
POSTGRES_USER=crm_production
POSTGRES_PASSWORD=production-secure-password
POSTGRES_HOST=production-db.your-domain.com
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://production-redis.your-domain.com:6379/0
CACHE_URL=redis://production-redis.your-domain.com:6379/0

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-sendgrid-user
EMAIL_HOST_PASSWORD=your-sendgrid-password
DEFAULT_FROM_EMAIL=noreply@crm-app.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Settings (Production)
CORS_ALLOWED_ORIGINS=https://crm-app.com,https://admin.crm-app.com

# JWT Settings
JWT_SECRET_KEY=production-jwt-secret-key

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_BROKER_URL=redis://production-redis.your-domain.com:6379/1

# Media Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Logging
LOG_LEVEL=WARNING

# Monitoring
SENTRY_DSN=https://your-production-sentry-dsn

# Environment
ENVIRONMENT=production