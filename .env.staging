# Staging Environment Configuration
# Following KISS principles - simple and clear

# Django Settings
DEBUG=False
SECRET_KEY=staging-secret-key-change-in-production
DJANGO_SETTINGS_MODULE=crm.settings_staging

# Database Configuration
POSTGRES_NAME=crm_staging
POSTGRES_USER=crm_staging
POSTGRES_PASSWORD=staging-secure-password
POSTGRES_HOST=staging-db.your-domain.com
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://staging-redis.your-domain.com:6379/0
CACHE_URL=redis://staging-redis.your-domain.com:6379/0

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-sendgrid-user
EMAIL_HOST_PASSWORD=your-sendgrid-password
DEFAULT_FROM_EMAIL=staging@crm-app.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Settings (Staging)
CORS_ALLOWED_ORIGINS=https://staging.crm-app.com,https://staging-admin.crm-app.com

# JWT Settings
JWT_SECRET_KEY=staging-jwt-secret-key

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_BROKER_URL=redis://staging-redis.your-domain.com:6379/1

# Media Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Logging
LOG_LEVEL=INFO

# Monitoring
SENTRY_DSN=https://your-sentry-dsn

# Environment
ENVIRONMENT=staging